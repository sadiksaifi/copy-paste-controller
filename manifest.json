{
  "manifest_version": 3,
  "name": "Copy & Paste Controller",
  "version": "1.0.0",
  "description": "Easily enable or disable copy and paste functionality on any webpage. Perfect for content protection and security-conscious browsing.",
  "author": "Sadik Saifi",
  "license": "GPL-3.0-or-later",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Copy & Paste Controller"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
